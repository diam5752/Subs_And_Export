# Greek Sub Publisher - Docker Environment Variables
# Copy this file to .env.docker and fill in your values

# ===========================================
# Required: API Keys for AI Services
# ===========================================

# OpenAI API Key (for Ultimate model and social copy generation)
OPENAI_API_KEY=sk-your-openai-key-here

# Groq API Key (for fast cloud transcription)
GROQ_API_KEY=gsk_your-groq-key-here

# ===========================================
# Optional: OAuth & Social Publishing
# ===========================================

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# TikTok API (for direct publishing)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:3000/tiktok/callback

# ===========================================
# Application Settings
# ===========================================

# CORS origins (comma-separated, add your domain for production)
GSP_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Trusted hosts (comma-separated, add your domain for production)
GSP_TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Force HTTPS redirect (set to 1 in production behind SSL)
GSP_FORCE_HTTPS=0
